{
    "name": "flex-orders",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^6",
        "express": "^4",
        "hdb": "^0.19.0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.14",
        "cds-launchpad-plugin": "^1.0.8",
        "rimraf": "^3.0.2",
        "sqlite3": "^5.0.4"
    },
    "scripts": {
        "start": "cds run",
        "watch-form-entry": "cds watch --open form-entry/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-create-wizard": "cds watch --open create-wizard/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-custom-listreport": "cds watch --open custom-listreport/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-custom-wizard": "cds watch --open custom-wizard/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-custom-form-entry": "cds watch --open custom-form-entry/webapp/index.html?sap-ui-xx-viewCache=false",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "undeploy": "cf undeploy flex-orders --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive"
    },
    "engines": {
        "node": "^16.15"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "sapux": [
        "app/form-entry",
        "app/create-wizard",
        "app/create-wizard",
        "app/custom-listreport",
        "app/custom-wizard",
        "app/custom-form-entry"
    ],
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                }
            }
        }
    },
    "sapux": [
        "app/custom-listreport",
        "app/custom-form-entry",
        "app/form-entry",
        "app/create-wizard"
    ]
}
